<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.MainActivity"
    android:animateLayoutChanges="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playerProfileBtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="profile"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_gravity="top|end"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:srcCompat="@drawable/ic_highscore"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:fontFamily="sans-serif-black"
            android:text="Response"
            android:textColor="#000000"

            android:textSize="55sp"
            app:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/modeSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:fontFamily="sans-serif-black"
            android:text="Select mode"
            android:textColor="#000000"

            android:textSize="25sp"
            app:fontFamily="sans-serif"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/beginner"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"

            android:text="Beginner"
            android:textColor="@color/black"
            android:textSize="26sp"


            app:backgroundTint="@color/safe"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.053" />

        <Button
            android:id="@+id/normal"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            android:text="Normal"
            android:textColor="@color/black"
            android:textSize="26sp"


            app:backgroundTint="@color/yellow"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beginner"
            app:layout_constraintVertical_bias="0.03" />

        <Button
            android:id="@+id/expert"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="Expert"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:backgroundTint="@color/love"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/normal"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            android:id="@+id/master"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="Rapid Fire"
            android:textColor="@color/yellow"
            android:textSize="26sp"
            app:backgroundTint="@color/purple"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expert"
            app:layout_constraintVertical_bias="0.072" />

        <!--<ImageView
            android:id="@+id/dataStatus"
            android:layout_width="24dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/love"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
